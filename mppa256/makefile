# Builds CAP Benchmark suite for MPPA-256 architecture.
#

# Directories.
LIBSRCDIR = $(CURDIR)/libsrc
INCDIR = $(CURDIR)/include
SRCDIR = $(CURDIR)/src
K1_TOOLCHAIN_DIR = /usr/local/k1tools

# Builds all kernels.
all:
	cd $(SRCDIR) && $(MAKE) all
	
# Cleans compilation files.
clean:
	cd $(SRCDIR) && $(MAKE) clean
